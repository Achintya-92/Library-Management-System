<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h2 class="mb-4">ðŸ“– Borrow / Return History</h2>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Book</th>
        <th>Author</th>
        <th>Borrower</th>
        <th>Status</th>
        <th>Borrowed At</th>
        <th>Returned At</th>
      </tr>
    </thead>
    <tbody>
      <% if (history.length > 0) { %>
        <% history.forEach((txn, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= txn.book_name %></td>
            <td><%= txn.author_name %></td>
            <td><%= txn.borrower %></td>
            <td>
              <% if (txn.status === "borrowed") { %>
                <span class="badge bg-warning text-dark">Borrowed</span>
              <% } else { %>
                <span class="badge bg-success">Returned</span>
              <% } %>
            </td>
            <td><%= txn.borrowed_at ? txn.borrowed_at.toLocaleString() : "-" %></td>
            <td><%= txn.returned_at ? txn.returned_at.toLocaleString() : "-" %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="7" class="text-center text-muted">No borrow/return records yet</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
