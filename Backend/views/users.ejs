<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User List</title>
<%- include("Includes/link.ejs"); %>
  <style>
    table,th,td{
      border: 1px solid black;
    }
  </style>
</head>
<body>
   <form action="http://localhost:8000/entry" method="post">
  <button class="btn btn-primary">âž• Sign in For Start Manage you Library</button>
</form>
  <table class="table mt-3">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Username</th>
        <th>See reviews</th>

      </tr>
    </thead>
    <tbody id="userTable">
      <% user.forEach((u, index) => { %>
        <tr class="userRow"  <%= index >= 10 ? " style ='display:none;' ": "" %>>
          <td><%= u.id %></td>
          <td><%= u.name %></td>
          <td><%= u.email %></td>
           <td><%= u.review %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="text-center mt-3">
    <button id="seeMoreBtn" class="btn btn-secondary">See More</button>
  </div>

  <script>
    const rows = document.querySelectorAll(".userRow");
    const btn = document.getElementById("seeMoreBtn");
    let visibleCount = 10;  // initially showing 3

    btn.addEventListener("click", () => {
      let newVisible = visibleCount + 5; // show 3 more each time
      for (let i = visibleCount; i < newVisible && i < rows.length; i++) {
        rows[i].style.display = "table-row";
      }
      visibleCount = newVisible;

      if (visibleCount >= rows.length) {
        btn.style.display = "none"; // hide button when all shown
      }
    });
  </script>
</body>
</html>
